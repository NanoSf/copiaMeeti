<main class="contenedor contenedor-formularios not-padding">
    <h1> <%= nombrePagina %> </h1>

    <form method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre Grupo" value="<%= grupo.nombre %>">
        </div>

        <div class="campo descripcion">
            <label>Descripci√≥n</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%- grupo.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label>Categoria</label>
            <select name="categoriaId">
                <option value="" selected>-- Elige una categoria --</option>
                <% categorias.forEach(categoria => { %>
                    <option <%= (grupo.categoriaId === categoria.id) ? 'selected' : '' %> value="<%= categoria.id %>"> <%= categoria.nombre %> </option>
                <% }); %>
            </select>
        </div>
        
        <div class="campo">
            <label>Sitio Werb</label>
            <input type="url" name="url" placeholder="Sitio Web" value="<%- grupo.url %>">
        </div>

        <div class="campo enviar">
            <input type="submit" value="Guardar Cambios" class="btn btn-rosa">
        </div>
    </form>
</main>